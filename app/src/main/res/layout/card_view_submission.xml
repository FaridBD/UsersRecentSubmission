<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/sub_card_view"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    app:cardCornerRadius="15dp"
    android:layout_margin="15dp"
    android:padding="10dp"
    android:clickable="true"
    card_view:cardElevation="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/judge_icon"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:src="@drawable/codechef_round_icon2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView

                android:id="@+id/problem_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Problem Name"
                android:gravity="center"
                android:textSize="20sp"
                android:paddingBottom="3dp"
                android:textStyle="bold"/>
            <TextView

                android:id="@+id/solution_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submission Time"
                android:paddingBottom="3dp"
                android:textSize="14sp"
                android:gravity="center" />
            <TextView
                android:id="@+id/solution_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="3dp"
                android:textStyle="italic|bold"
                android:text="Solution Status"
                android:textSize="19sp"
                android:gravity="center" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="19dp"
                android:weightSum="2">
                <TextView
                    android:id="@+id/ex_time"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Ex time"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textSize="14sp"/>
                <TextView
                    android:textColor="#fff"
                    android:id="@+id/usage_memory"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="memory"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:gravity="center"/>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>